<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:id="@+id/LL_chatKiri"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/warnaChatBubble"
            android:padding="8dp">

            <TextView
                android:id="@+id/nama_pengirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengirim"
                android:textColor="@color/warnaNamaPengirim"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/chat_kiri_diterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/waktu_pengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Pesan"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:id="@+id/LL_chatKanan"
        android:layout_marginLeft="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/warnaChatSaya"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Saya"
                android:textColor="@color/warnaNamaSaya"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/chat_kanan_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo"
                android:textColor="#795548"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/waktu_saya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Saya"
            android:textColor="@color/warnaNamaSaya"
            android:textSize="11sp"
            android:layout_gravity="right"/>

    </LinearLayout>

</RelativeLayout>
